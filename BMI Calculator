<script> type="text/javascript">

function mybmi() {

var ht=document.getElementById('h').value;
var wt=document.getElementById('w').value;
var mybmi=wt/(ht/100*ht/100);
var mybmio=(mybmi.toFixed(2));

document.getElementById("result").innerHTML="Your BMI is " + mybmio;
}
</script>
<body>

<div>
<h2>Find your BMI by height and weight</h2>
<p class="text"> What is your Height?</p>
<input type="text" id="h">
<p class="text"> What is your Weight?</p>
<input type="text" id="w">
<p id="result"></p>
<button id="btn" onClick="mybmi()">Calculate Your BMI </button>
<p id="in"> Enter your height in cm and weight in kg to find out your BMI </p>
</div>
